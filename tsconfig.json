{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@src/*": ["src/*"],
      "@audit/*": ["src/audit/*"],
      "@common/*": ["src/common/*"],
      "@modules/*": ["src/modules/*"]
    },
    "types": ["node", "@nestjs/event-emitter"],
    "ignoreDeprecations": true
  },
  "include": ["src","src/types"],
  "exclude": ["node_modules", "dist"]
}
